import requests
from datetime import datetime

def get_iss_location():
    url = "http://api.open-notify.org/iss-now.json"
    
    try:
        response = requests.get(url)
        response.raise_for_status()
        data = response.json()

        timestamp = data["timestamp"]
        latitude = data["iss_position"]["latitude"]
        longitude = data["iss_position"]["longitude"]
        
        time_utc = datetime.utcfromtimestamp(timestamp).strftime('%Y-%m-%d %H:%M:%S UTC')
        
        map_url = f"https://www.google.com/maps/place/{latitude},{longitude}"

        print("üõ∞Ô∏è –¢–µ–∫—É—â–µ–µ –ø–æ–ª–æ–∂–µ–Ω–∏–µ –ú–ö–°:")
        print(f"–í—Ä–µ–º—è: {time_utc}")
        print(f"–®–∏—Ä–æ—Ç–∞: {latitude}¬∞")
        print(f"–î–æ–ª–≥–æ—Ç–∞: {longitude}¬∞")
        print(f"–ö–∞—Ä—Ç–∞: {map_url}")
        print(f"–°–∫–æ—Ä–æ—Å—Ç—å: ~7.66 –∫–º/—Å (–æ—Ä–±–∏—Ç–∞–ª—å–Ω–∞—è)")
        print(f"–í—ã—Å–æ—Ç–∞: ~420 –∫–º –Ω–∞–¥ –ó–µ–º–ª—ë–π")

    except requests.exceptions.RequestException as e:
        print(f"–û—à–∏–±–∫–∞ –ø—Ä–∏ –∑–∞–ø—Ä–æ—Å–µ –∫ API: {e}")
    except KeyError as e:
        print(f"–û—à–∏–±–∫–∞ –ø—Ä–∏ –æ–±—Ä–∞–±–æ—Ç–∫–µ –¥–∞–Ω–Ω—ã—Ö: {e}")

if __name__ == "__main__":
    get_iss_location()
